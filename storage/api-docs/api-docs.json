    "components": {
        "schemas": {
            "Customer": {
                "type": "object",
                "required": [
                    "first_name",
                    "last_name",
                    "email"
                ],
                "properties": {
                    "first_name": {
                        "type": "string",
                        "example": "doggie"
                    },
                    "last_name": {
                        "type": "string",
                        "example": "doggie1"
                    },
                    "email": {
                        "type": "string",
                        "example": "doggie@web.com"
                    },
                    "phone_numbers": {
                        "type": "array",
                        "xml": {
                            "name": "phone_numbers"
                        },
                        "items": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "securitySchemes": {          
            "bearerAuth": {
				"type": "http",
				"description": "Passport security.",
				"scheme": "bearer",
				"bearerFormat": "JWT"
			}
